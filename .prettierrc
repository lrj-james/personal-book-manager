{
	"printWidth": 80,
	"tabWidth": 4,
	"useTabs": true,
	"semi": true,
	"singleQuote": true,
	"trailingComma": "es5",
	"bracketSpacing": true,
	"arrowParens": "avoid",
	"plugins": ["prettier-plugin-jinja-template"],
	"overrides": [
		{
			"files": ["*.html"],
			"options": {
				"tabWidth": 2,
				"parser": "jinja-template"
			}
		}
	]
}
